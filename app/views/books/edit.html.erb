<div class = "container">
  <div class = "row d-flex justify-content-center">
    <div class = "col-6">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
          <h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
        <% @book.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      <%= form_with model: @book do |f| %>
        <p class = "mt-3">Title</p>
        <%= f.text_field :title, autofocus: true, style: "width: 100%;" %>
        <p class = "mt-3">Opinion</p>
        <%= f.text_area :body, style: "width: 100%;" %>
        <%= f.submit "Update Book", class: "btn btn-success" %>
      <% end %>
      <div class = "col">
        <%= link_to "Show", book_path(@book.id) %> |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>