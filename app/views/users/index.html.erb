<div>
  <div>
    <h2>User info</h2>
    <p>
      name <%= current_user.name %>
    </p>
    <p>
      introduction <%= current_user.introduction %>
    </p>
    <p>
      <%= link_to "編集", edit_user_path(current_user) %>
    </p>
  </div>
  <div>
    <h2>New book</h2>
    <%= form_with model: @book do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %>
    <%= f.submit "Create Book" %>
    <% end %>
  </div>
</div>

<div>
  <h2>Users</h2>
  <p>image</p>
  <p>name</p>
  <% @users.each do |users| %>
  <ul><%= users.name %></ul>
  <ul><%= users.introduction %></ul>
  <ul><%= link_to "Show", user_path(users.id) %></ul>
  <% end %>
</div>