<div class = "container">
  <div class = "row d-flex justify-content-center">
    <div class = "col-6">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <h2><%= @user.errors.count %>error prohibited this obj from being saved:</h2>
      <% @user.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
      <% end %>
      <%= form_with model: @user do |f| %>
      <p>Name</p>
      <%= f.text_field :name, autofocus: true, style: "width: 100%;" %>
      <p class = "mt-3">Image</p>
      <%= f.file_field :profile_image, accept: "image/png, image/jpeg" %>
      <p class = "mt-3">Introduction</p>
      <%= f.text_area :introduction, style: "width: 100%;" %>
      <%= f.submit "Update User", class: "btn btn-secondary"%>
      <% end %>
    </div>
  </div>
</div>

