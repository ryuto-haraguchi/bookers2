<div>
  <div>
    <h2>User info</h2>
    <p>
      name <%= user.name %>
    </p>
    <p>
      introduction <%= user.introduction %>
    </p>
    <p>
      <%= link_to "編集", edit_user_path(user) %>
    </p>
  </div>
  <div>
    <h2>New book</h2>
    <%= form_with modal: @book do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %>
    <%= f.submit "Create Book" %>
    <% end %>
  </div>
</div>